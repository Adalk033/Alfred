{
  "description": "Paquetes que frecuentemente causan WinError 32 en Windows durante pip install",
  "strategy": "Estos paquetes se instalan UNO POR UNO con delays largos DESPUÉS de los paquetes estables",
  "problematic_packages": [
    "antlr4-python3-runtime",
    "langchain",
    "langchain-community",
    "langchain-core",
    "langchain-text-splitters",
    "langchain-ollama",
    "greenlet",
    "grpcio",
    "numpy",
    "scipy",
    "pandas",
    "pillow",
    "matplotlib",
    "lxml",
    "psycopg2-binary",
    "cryptography",
    "cffi",
    "sympy",
    "nltk",
    "chromadb",
    "unstructured",
    "unstructured-inference",
    "transformers",
    "tokenizers",
    "spacy",
    "tensorflow",
    "scikit-learn",
    "opencv-python"
  ],
  "install_config": {
    "delay_between_packages_ms": 3000,
    "retries_per_package": 5,
    "timeout_per_package_seconds": 300
  },
  "notes": {
    "antlr4-python3-runtime": "Parser runtime - puede tardar en compilar",
    "greenlet": "SQLAlchemy dependency - compila extensiones C",
    "grpcio": "gRPC library - compila bindings C++",
    "numpy": "Numerical computing - binarios grandes",
    "scipy": "Scientific computing - depende de numpy",
    "torch": "PyTorch - archivos muy grandes (>700MB)",
    "matplotlib": "Plotting library - muchos archivos pequeños",
    "cryptography": "Compila extensiones C con OpenSSL",
    "nltk": "Natural language - descarga datos adicionales"
  }
}
{
  "name": "alfred-electron",
  "version": "1.0.0",
  "description": "Alfred - Asistente Personal Inteligente con interfaz gr√°fica",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "alfred",
    "assistant",
    "ai",
    "electron",
    "chatbot"
  ],
  "author": "Adalk033",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.adalk033.alfred",
    "productName": "Alfred",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "files": [
      "main.js",
      "js/**/*",
      "renderer/index.html",
      "styles.css",
      "assets/**/*"
    ]
  }
}
